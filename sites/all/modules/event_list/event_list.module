        '#type' => 'date_popup', // types date_select 'date_popup', 'date_text' and 'date_timezone' are also supported. See .inc file.
        '#title' => t('活動開始時間：'),
        '#default_value' => date($format, $_SERVER['REQUEST_TIME']),                                                    //預設時間
